<div class="container content">
    <div class="row margin-bottom-30">
        <div class="col-md-9 mb-margin-bottom-30">
            <p>Hacenos cualquier consulta acerca de nuestros productos</p><br>
            <form action="/Empresa/Contacto" method="post" id="sky-form3" class="sky-form contact-style">
                @*<fieldset class="no-padding">*@
                <label class="h4">Nombre <span class="color-red">*</span></label>
                <div class="row sky-space-20">
                    <div class="col-md-7 col-md-offset-0">
                        <div>
                            <input type="text" name="nombre" id="nombre" class="form-control" required>
                        </div>
                    </div>
                </div>
                <label class="h4">Email <span class="color-red">*</span></label>
                <div class="row sky-space-20">
                    <div class="col-md-7 col-md-offset-0">
                        <div>
                            <input type="text" name="email" id="email" class="form-control" required>
                        </div>
                    </div>
                </div>
                <label class="h4">Teléfono <span class="color-red"></span></label>
                <div class="row sky-space-20">
                    <div class="col-md-7 col-md-offset-0">
                        <div>
                            <input type="text" name="telefono" id="telefono" class="form-control">
                        </div>
                    </div>
                </div>
                <label class="h4">Consulta <span class="color-red">*</span></label>
                <div class="row sky-space-20">
                    <div class="col-md-11 col-md-offset-0">
                        <div>
                            <textarea rows="8" name="consulta" id="consulta" class="form-control" required></textarea>
                        </div>
                    </div>
                </div>
                <br />
                <p><button type="submit" class="btn-u" style="right:0px;">Enviar</button></p>
                @*</fieldset>*@
               
            </form>
        </div><!--/col-md-9-->
        <div class="col-md-3">
