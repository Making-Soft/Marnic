                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    Categoria
                                    <i class="fa fa-angle-down"></i>
                                </a>
                            </h2>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <ul class="list-unstyled checkbox-list">
                                    @if (ViewBag.Categoria_1 != null)
                                {
                                    foreach (var t in ViewBag.Categoria_1)
                                    {
                                <li>

                                    <label class="checkbox">
                                        <input id="chk_@t.Id_Categoria_Producto.ToString()" type="checkbox" name="chk_@t.Id_Categoria_Producto.ToString()" onclick="cambiarDisplay(@t.Id_Categoria_Producto.ToString())" />
                                        <i></i>@t.Descripcion.ToString()
                                        <small><a href="#">(@t.Cantidad.ToString())</a></small>
                                    </label>
                                </li>
                                        }
                                }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div><!--/end panel group-->
                @*<button type="button" class="btn-u btn-brd btn-brd-hover btn-u-lg btn-u-sea-shop btn-block">Reset</button>*@
            </div>
            <div class="col-md-9">
                <div class="filter-results">
                    @if (ViewBag.Categoria_1 != null)
                    {
                        foreach (var pc in ViewBag.Categoria_1)
                        {

                            int j = 0;
                            <div id="@pc.Id_Categoria_Producto.ToString()" style="display:none;">
                                @if (pc.Productos.Count > 0)
                                {
                                    @Html.Raw("<div>")
                                    foreach (var pr in pc.Productos)
                                    {

                                        j = j + 1;
                                        if ((j - 1) % 3 == 0 || j == 0)
                                        {
                                            @Html.Raw("</div>")
                                            @Html.Raw("<div class='row illustration-v2'>");
                                        }

                                        <div class="col-md-4">
                                            <div class="product-img product-img-brd">
                                                <a href="#"><img class="full-width img-responsive" src="@pr.Ruta_Imagen.ToString()" alt=""></a>
                                                <a class="product-review" href="shop-ui-inner.html">Solicitar</a>
                                            </div>
                                            <div class="product-description product-description-brd margin-bottom-30">
                                                <div class="overflow-h margin-bottom-5">
                                                    <div class="pull-left">
                                                        <h4 class="title-price"><a href="shop-ui-inner.html">Codigo: @pr.Nombre.ToString()</a></h4>
                                                        <span class="gender text-uppercase">@pr.Descripcion.ToString()</span>
                                                    </div>
                                                    <div class="product-price">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }


                                    @Html.Raw("</div>")


                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

    </div><!--/end row-->
    </div><!--/end container-->
    </body>

    <script>
        jQuery(document).ready(function () {
